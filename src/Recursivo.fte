funciones
funcion numerico factorial(numerico x)
si(x=0)entonces
factorial <- 1;
otro_caso
factorial <- x*factorial(x-1);
fin_si;
fin_funcion
funcion numerico pot(numerico base, numerico exp)
si(exp=0)entonces
pot <- 1;
otro_caso
pot <- base*pot(base,exp-1);
fin_si;
fin_funcion
